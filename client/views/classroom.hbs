<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Portal</title>
    {{>Headerlinks}}

</head>

<body>


   {{>Navbar}}
    <!-- NavBar -->


    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3 mb-4">
                <ul class="nav flex-column">
                    <li id="active-1" class="nav-item dashboard-item active" onclick="swtichTab(1)">
                        <a class="nav-link text-black" aria-current="page" href="#"><i
                                class="fa-solid fa-list"></i>&ensp; Classroom</a>
                    </li>
                    <li id="active-2" class="nav-item " onclick="swtichTab(2)">
                        <a class="nav-link text-black" href="#"><i class="fa-solid fa-user"
                                style="color: #FFD43B;"></i>&ensp; Profile</a>
                    </li>
               
                    <li id="active-3" class="nav-item dashboard-item" onclick="swtichTab(3)">
                        <a class="nav-link text-black" href="#"><i class="fa-solid fa-user"
                                style="color: #ff3d3d;"></i>&ensp; Your Defaulter Classes</a>
                    </li>
                    <li id="active-4" class="nav-item dashboard-item">
                        <a class="nav-link text-black" href="#"><i class="fa-solid fa-right-from-bracket"></i>&ensp;
                            Logout</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-9">
                <!-- classroom -->
                <div id="tab-1" class="container">
                    <div class="row ">
                        <div class="col-md-6 mb-4">
                            <div class="card text-dark bg-light mb-3 mx-3">
                                <div class="card-header"><i class="fas fa-school" style="color:#f45243;"></i></div>
                                <div class="card-body">
                                    <h5 class="card-title">Total Classroom</h5>
                                    <h1>2</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card text-dark bg-light mb-3 mx-3">
                                <div class="card-header"><i class="fas fa-person-booth" style="color:#fc9d40;"></i>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">User's Classroom</h5>
                                    <h1>2</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card text-dark bg-light mb-3 mx-3">
                                <div class="card-header"><i class="fas fa-database" style="color:#2cce9d;"></i></div>
                                <div class="card-body">
                                    <h5 class="card-title">Total Lectures Attended</h5>
                                    <h1>2</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card text-dark bg-light mb-3 mx-3">
                                <div class="card-header"><i class="fas fa-chart-simple" style="color: #018df9;"></i>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Attendance of user</h5>
                                    <h1>2%</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile -->

                <div id="tab-2" class="container" style="display: none;">
                    <div class="card ">
                        <div class="card-header">
                            Profile
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">User Name</h5>
                            <p class="card-text my-1 mt-3">RollNo</p>
                            <p class="card-text my-1">Year</p>
                            <p class="card-text mt-1 mb-4">Department</p>

                            <a href="#" class="btn btn-primary">Edit Info</a>
                        </div>
                    </div>
                </div>

                <!-- Your Defaulter Classes-->

                <div id="tab-3" class="container" style="display: none;">
                    <div class="">
                        <h4>View The List Of Classes in which you have <span class="bg-danger">BELOW
                                75%</span>attendance</h4>
                    </div>
                    <div class="mt-5">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Classroom</th>
                                    <th scope="col">Leatures</th>
                                    <th scope="col">Attendance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                </tr>
                            
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>





    <footer class="bg-body-tertiary text-center text-lg-start mt-8 footer  ">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            Â© 2020 Copyright:
            <a class="text-body" href="/">Attendance Portal</a>
        </div>
        <!-- Copyright -->
    </footer>

</body>

</html>